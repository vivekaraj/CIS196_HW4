<%= form_for(@employee) do |f| %>
	<div class="field">
		<p>Name</p>
		<%= f.text_field :name%>
	</div>
	<div class="field">
		<p>Job Category</p>
		<%= f.text_field :category%>
	</div>
	<div class="field">
		<p>Company</p>
		<%= f.text_field :company%>
	</div>
	<div class="field">
		<p>Email</p>
		<%= f.text_field :email%>
	</div>
	<div class="actions">
		<%= f.submit %>
	</div>
	<div class = "error-msg">
		<% if @employee.errors.any? %>
		<ul>
			<% @employee.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
			<% end %>
		</ul>
		<% end %>
	</div>
	<p> <%=link_to "Go to home page", root_path %> </p>
<% end %>